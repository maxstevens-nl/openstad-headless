{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "NodeNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "NodeNext",
		// "allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",
		"allowJs": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		"paths": {
			"react": ["./node_modules/@types/react"]
		}
	},

	"include": [
		"next-env.d.ts",
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/*.js",
		"**/*.jsx",
		"types/**/*.d.ts"
	],
	"exclude": ["**/node_modules", "next-env.d.ts", "../**/src/main.tsx"]
}
